<Window x:Class="LunaForge.Views.LauncherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LunaForge.Views"
        xmlns:vm="clr-namespace:LunaForge.ViewModels"
        mc:Ignorable="d"
        Title="LunaForge"
        Height="700"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource LFWindow}">
    <Window.DataContext>
        <vm:LauncherViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <DockPanel>
                <TreeView DockPanel.Dock="Bottom"
                          ItemsSource="{Binding ProjectCategories}"
                          Background="White"
                          BorderThickness="0">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="True"/>
                            <Setter Property="Padding" Value="0,2"/>
                        </Style>
                    </TreeView.ItemContainerStyle>

                    <TreeView.Resources>
                        <HierarchicalDataTemplate DataType="{x:Type vm:ProjectCategory}"
                                                  ItemsSource="{Binding Projects}">
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="{Binding CategoryName}"
                                           FontWeight="SemiBold"
                                           FontSize="12"
                                           Foreground="#333"
                                           Margin="8,0,0,0"/>
                                <TextBlock Text="{Binding Projects.Count, StringFormat=' ({0})'}"
                                           FontSize="11"
                                           Foreground="#999"
                                           Margin="4,0,0,0"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>

                        <DataTemplate DataType="{x:Type vm:ProjectItem}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0"
                                            Orientation="Horizontal"
                                            Margin="0,4"
                                            Height="32">
                                    <Button Content="▶"
                                            Command="{Binding DataContext.OpenProjectCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Padding="4"
                                            Foreground="#666"
                                            Cursor="Hand"
                                            ToolTip="Open Project"/>

                                    <StackPanel VerticalAlignment="Center" Margin="4,0,0,0">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="12"
                                                   Foreground="#333"/>
                                        <TextBlock Text="{Binding Path, StringFormat='🗂 {0}'}"
                                                   FontSize="10"
                                                   MaxWidth="150"
                                                   Foreground="#999"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <StackPanel.ToolTip>
                                            <TextBlock Text="{Binding Path}"/>
                                        </StackPanel.ToolTip>
                                    </StackPanel>
                                </StackPanel>

                                <Button Grid.Column="1"
                                        Content="{Binding PinButtonContent}"
                                        Command="{Binding DataContext.TogglePinCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="4"
                                        Foreground="#999"
                                        FontSize="14"
                                        ToolTip="{Binding PinTooltip}"/>
                            </Grid>
                        </DataTemplate>
                    </TreeView.Resources>
                </TreeView>
            </DockPanel>
        </Border>

        <StackPanel Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Welcome to LunaForge"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#333"
                           TextAlignment="Center"/>
                <TextBlock Text="No-Code editor for all LuaSTG branches"
                           FontSize="14"
                           Foreground="#666"
                           TextAlignment="Center"
                           Margin="0,8,0,0"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" Margin="10,30,10,10">
                <Button Content="➕ Create New Project"
                        Command="{Binding CreateNewCommand}"
                        Width="220"
                        Height="40"
                        FontSize="14"
                        Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="📁 Open Existing Project"
                        Command="{Binding OpenExistingCommand}"
                        Width="220"
                        Height="40"
                        FontSize="14"
                        Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="📋 Continue Without Project"
                        Command="{Binding GoToMainCommand}"
                        Width="220"
                        Height="40"
                        FontSize="14"
                        Style="{StaticResource ActionButtonStyle}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>