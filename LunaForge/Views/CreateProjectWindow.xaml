<Window x:Class="LunaForge.Views.CreateProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:LunaForge.ViewModels"
        xmlns:tools="clr-namespace:LunaForge.Tools"
        mc:Ignorable="d"
        Title="Create New Project"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource LFWindow}">
    <Window.DataContext>
        <vm:CreateProjectViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <tools:Int32ToVisibilityConverter x:Key="Int32ToVisibilityConverter"/>
        <tools:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
        <tools:ObjectEqualityConverter x:Key="ObjectEqualityConverter"/>

        <Style x:Key="TemplateCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SelectedTemplateCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#E8F4F8"/>
            <Setter Property="BorderBrush" Value="#0078D4"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="24,10"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="24,10"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel Visibility="{Binding CurrentPage, Converter={StaticResource Int32ToVisibilityConverter}, ConverterParameter=0}">
                <StackPanel Margin="40,40,40,20">
                    <TextBlock Text="Create a new project"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#333"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Select a template to get started"
                               FontSize="14"
                               Foreground="#666"
                               Margin="0,0,0,30"/>
                </StackPanel>

                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20">
                    <ItemsControl ItemsSource="{Binding Templates}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="200"
                                        Height="150"
                                        Background="White"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="16"
                                        Margin="8"
                                        Cursor="Hand">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Value="True">
                                                    <DataTrigger.Binding>
                                                        <MultiBinding Converter="{StaticResource ObjectEqualityConverter}">
                                                            <Binding Path="." />
                                                            <Binding Path="DataContext.SelectedTemplate" RelativeSource="{RelativeSource AncestorType=Window}" />
                                                        </MultiBinding>
                                                    </DataTrigger.Binding>
                                                    <Setter Property="Background" Value="#E8F4F8"/>
                                                    <Setter Property="BorderBrush" Value="#0078D4"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick"
                                                      Command="{Binding DataContext.SelectTemplateCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>

                                    <StackPanel VerticalAlignment="Stretch" Margin="0">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="#333"
                                                   TextWrapping="Wrap"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding Description}"
                                                   FontSize="11"
                                                   Foreground="#666"
                                                   TextWrapping="Wrap"
                                                   VerticalAlignment="Bottom"/>
                                        <TextBlock Text="{Binding DisplaySource}"
                                                   FontSize="10"
                                                   Foreground="Gray"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>

            <StackPanel Visibility="{Binding CurrentPage, Converter={StaticResource Int32ToVisibilityConverter}, ConverterParameter=1}">
                <StackPanel Margin="40,40,40,20">
                    <TextBlock Text="Configure your project"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#333"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Enter project name and choose location"
                               FontSize="14"
                               Foreground="#666"
                               Margin="0,0,0,30"/>
                </StackPanel>
                <StackPanel Margin="40" MaxWidth="500" HorizontalAlignment="Left">
                    <TextBlock Text="Project name:"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#333"
                               Margin="0,0,0,8"/>
                    <TextBox Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}"
                             Height="36"
                             FontSize="12"
                             Foreground="#333"
                             Background="White"
                             BorderBrush="#D0D0D0"
                             BorderThickness="1"
                             Margin="0,0,0,24"/>

                    <TextBlock Text="Author:"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#333"
                               Margin="0,0,0,8"/>
                    <TextBox Text="{Binding ProjectAuthor, UpdateSourceTrigger=PropertyChanged}"
                             Height="36"
                             FontSize="12"
                             Foreground="#333"
                             Background="White"
                             BorderBrush="#D0D0D0"
                             BorderThickness="1"
                             Margin="0,0,0,24"/>

                    <TextBlock Text="Location:"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#333"
                               Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Text="{Binding ProjectPath, Mode=OneWay}"
                                 Height="36"
                                 MinWidth="200"
                                 MaxWidth="400"
                                 Width="400"
                                 FontSize="12"
                                 Foreground="#666"
                                 Background="#F5F5F5"
                                 BorderBrush="#D0D0D0"
                                 BorderThickness="1"
                                 IsReadOnly="True"
                                 Margin="0,0,8,0"/>

                        <Button Grid.Column="1"
                                Content="Browse..."
                                Command="{Binding ChangePathCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Height="36"/>
                    </Grid>

                    <Border Background="#F5F5F5"
                            BorderBrush="#D0D0D0"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="16"
                            Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="Project will be created at:"
                                       FontSize="11"
                                       Foreground="#666"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding ProjectPath}"
                                       FontSize="11"
                                       Foreground="#333"
                                       TextWrapping="Wrap"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button Content="Back"
                        Command="{Binding GoBackCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Visibility="{Binding CurrentPage, Converter={StaticResource Int32ToVisibilityConverter}, ConverterParameter=1}"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"/>

                <Button Content="Next"
                        Command="{Binding ConfirmTemplateCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        Visibility="{Binding CurrentPage, Converter={StaticResource Int32ToVisibilityConverter}, ConverterParameter=0}"/>

                <Button Content="Create"
                        Command="{Binding CreateProjectCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        IsEnabled="{Binding IsCreating, Converter={StaticResource InvertedBoolConverter}}"
                        Visibility="{Binding CurrentPage, Converter={StaticResource Int32ToVisibilityConverter}, ConverterParameter=1}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
