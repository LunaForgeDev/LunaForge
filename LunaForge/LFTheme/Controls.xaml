<ResourceDictionary x:Class="LunaForge.LFTheme.Controls"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2"
                    xmlns:local="clr-namespace:LunaForge.LFTheme">
    <FontFamily x:Key="FSPixel">pack://application:,,,/Resources/#FS Pixel Sans Unicode Regular</FontFamily>
    <!--<PopupAnimation x:Key="{x:Static SystemParameters.MenuPopupAnimationKey}">Fade</PopupAnimation>-->
    <BorderGapMaskConverter x:Key="BorderGapMaskConverter"/>
    <Style x:Key="FocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Margin="0"
                               SnapsToDevicePixels="True"
                               Stroke="{DynamicResource ABrush.ColourfulGlyph.Static}"
                               StrokeThickness="2"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="WindowButton"
           TargetType="{x:Type Button}">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource Window.Button.MouseOver.Background}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource Window.Button.MouseOver.Border}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="LFWindow" TargetType="{x:Type Window}">
        <Setter Property="Background" Value="{DynamicResource Window.Static.Background}"/>
        <Setter Property="Foreground" Value="{DynamicResource Window.Static.Foreground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Window.Static.Border}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="WindowStyle" Value="SingleBorderWindow"/>
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome CaptionHeight="30"
                              ResizeBorderThickness="6"
                              CornerRadius="0"
                              GlassFrameThickness="4,4,4,4"
                              NonClientFrameEdges="None"
                              UseAeroCaptionButtons="False"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Window}">
                    <Border Background="{TemplateBinding Background}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0"
                                    BorderBrush="{DynamicResource Window.Static.Border}"
                                    BorderThickness="4,4,4,4">
                                <Grid>
                                    <Border BorderThickness="4,4,0,0" BorderBrush="#f4e4f7"/>
                                    <DockPanel Background="Transparent">
                                        <DockPanel Background="Transparent" DockPanel.Dock="Right">
                                            <StackPanel Orientation="Horizontal"
                                                        HorizontalAlignment="Right"
                                                        DockPanel.Dock="Right">
                                                <Button x:Name="btnMinimize" Focusable="False" Background="{DynamicResource Window.Static.Background}"
                                                        BorderThickness="4,0,0,0" Width="30" Height="30" BorderBrush="{DynamicResource Window.Static.Border}"
                                                        Click="Minimize_Event"
                                                        Style="{StaticResource WindowButton}"
                                                        WindowChrome.IsHitTestVisibleInChrome="True">
                                                    <Border BorderThickness="4,4,0,0" BorderBrush="#f4e4f7"
                                                            Width="30" Height="30" Margin="-1">
                                                        <Path x:Name="MinimizePath"
                                                              Data="M 0 12 H 10"
                                                              StrokeThickness="4"
                                                              Stroke="{DynamicResource Window.Static.Border}">
                                                        </Path>
                                                    </Border>
                                                </Button>
                                                <Grid x:Name="ThingButtons">
                                                    <Button x:Name="btnRestore" Focusable="False" Background="{DynamicResource Window.Static.Background}"
                                                            BorderThickness="4,0,0,0" Width="30" Height="30" BorderBrush="{DynamicResource Window.Static.Border}"
                                                            Click="AutoMinimize_Event"
                                                            Style="{StaticResource WindowButton}"
                                                            WindowChrome.IsHitTestVisibleInChrome="True">
                                                        <Border BorderThickness="4,4,0,0" BorderBrush="#f4e4f7"
                                                                Width="30" Height="30" Margin="-1">
                                                            <Path x:Name="RestorePath"
                                                                  Data="M 0 12 H 10"
                                                                  StrokeThickness="4"
                                                                  Stroke="{DynamicResource Window.Static.Border}">
                                                            </Path>
                                                        </Border>
                                                    </Button>
                                                </Grid>
                                                <Button x:Name="btnClose" Focusable="False" Background="{DynamicResource Window.Static.Background}"
                                                        BorderThickness="4,0,0,0" Width="30" Height="30" BorderBrush="{DynamicResource Window.Static.Border}"
                                                        Click="CloseWindow_Event"
                                                        Style="{StaticResource WindowButton}"
                                                        WindowChrome.IsHitTestVisibleInChrome="True">
                                                    <Border BorderThickness="4,4,0,0" BorderBrush="#f4e4f7"
                                                            Width="30" Height="30" Margin="-1">
                                                        <Path x:Name="ClosePath"
                                                              Data="M 0 12 H 10"
                                                              StrokeThickness="4"
                                                              Stroke="{DynamicResource Window.Static.Border}">
                                                        </Path>
                                                    </Border>
                                                </Button>
                                            </StackPanel>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,5,0" HorizontalAlignment="Stretch">
                                            <Image HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   Margin="4,4,0,0"
                                                   Source="{Binding Icon, RelativeSource={RelativeSource TemplatedParent}}"
                                                   Height="24"/>
                                            <TextBlock FontSize="25"
                                                       FontFamily="{StaticResource FSPixel}"
                                                       Margin="5,-2,0,0"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Stretch"
                                                       TextWrapping="NoWrap"
                                                       Width="Auto"
                                                       Foreground="{TemplateBinding Foreground}"
                                                       Text="{Binding Title, RelativeSource={RelativeSource TemplatedParent}}"
                                                       TextAlignment="Left"/>
                                        </DockPanel>
                                    </DockPanel>
                                </Grid>
                            </Border>
                            <Border Grid.Row="1"
                                    BorderBrush="{DynamicResource Window.Static.Border}"
                                    BorderThickness="4,0,4,4"
                                    Background="{DynamicResource Window.Static.ContentBackground}">
                                <Grid>
                                    <AdornerDecorator>
                                        <ContentPresenter/>
                                    </AdornerDecorator>
                                    <ResizeGrip x:Name="WindowResizeGrip"
                                                HorizontalAlignment="Right"
                                                IsTabStop="False"
                                                Visibility="Visible"
                                                VerticalAlignment="Bottom"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                    <!--
                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="ResizeMode" Value="CanResizeWithGrip"/>
                                <Condition Property="WindowState" Value="Normal"/>
                            </MultiTrigger.Conditions>
